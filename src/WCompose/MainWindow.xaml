<controls:MetroWindow x:Class="WCompose.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        Title="WCompose Options"
        SizeToContent="WidthAndHeight"
        MinHeight="200"
        MinWidth="300">
    <controls:MetroAnimatedTabControl>
        <TabItem Header="Keys">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Content="Import XCompose file" HorizontalAlignment="Center" Click="LoadXComposeFileClicked" Margin="2" Grid.Column="0"/>
                    <Button Content="Export XCompose file" HorizontalAlignment="Center" Click="SaveXComposeFileClicked" Margin="2" Grid.Column="1"/>
                </Grid>
                <DataGrid>
                    
                </DataGrid>
            </StackPanel>
        </TabItem>
        <TabItem Header="Behavior">
            <StackPanel>
                <CheckBox Content="Show prompts" />
                <CheckBox Content="Start when Windows starts up" />
            </StackPanel>
        </TabItem>
    </controls:MetroAnimatedTabControl>
</controls:MetroWindow>
