<controls:MetroWindow x:Class="WCompose.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        Title="WCompose Options"
        SizeToContent="WidthAndHeight"
        MinHeight="200"
        MinWidth="300">
    <controls:MetroAnimatedTabControl>
        <TabItem Header="Keys">
            <StackPanel>
                <Button Content="Import XCompose file" />
                <DataGrid>
                    
                </DataGrid>
            </StackPanel>
        </TabItem>
        <TabItem Header="Behavior">
            <StackPanel>
                <CheckBox Content="Show prompts" />
                <CheckBox Content="Start when Windows starts up" />
            </StackPanel>
        </TabItem>
    </controls:MetroAnimatedTabControl>
</controls:MetroWindow>
