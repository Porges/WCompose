<Window x:Class="WCompose.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WCompose Options"
        SizeToContent="WidthAndHeight"
        MinHeight="200"
        MinWidth="300">
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="Import XCompose file" HorizontalAlignment="Center" Click="LoadXComposeFileClicked" Margin="2" Grid.Column="0"/>
            <Button Content="Export XCompose file" HorizontalAlignment="Center" Click="SaveXComposeFileClicked" Margin="2" Grid.Column="1"/>
        </Grid>
        <DataGrid>

        </DataGrid>
    </StackPanel>
</Window>
